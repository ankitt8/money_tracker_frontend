{
  "name": "moneytracker",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": ["packages/*", "apps/*"]
  },
  "scripts": {
    "web:dev": "yarn workspace @moneytracker/web dev",
    "web:build": "yarn workspace @moneytracker/web build",
    "dev": "webpack serve --config packages/common/webpack.dev.js",
    "build": "rm -rf build &&  webpack --config packages/common/webpack.prod.js",
    "_lint": "eslint 'packages/common/src/**/*.{js,jsx,ts,tsx}' --config packages/common/.eslintrc.json",
    "lint": "yarn _lint",
    "lint:fix": "yarn lint -- --fix",
    "format": "prettier --write 'packages/common/src/**/*.{js,jsx,ts,tsx,css,scss,md,json}' --config packages/common/.prettierrc",
    "prepare": "husky install",
    "build-report": "webpack-bundle-analyzer build/stats.json"
  }
}
